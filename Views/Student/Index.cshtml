@model IEnumerable<Students>
@{
    ViewData["Title"] = "Index";
}

<div class = "container p-3">
    <div class="row pt-4">
        <div class = "col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class = "col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-person-plus"></i> Add New Student
            </a>
        </div>
    </div>
    <br /><br />
     
 

<table class="table table-bordered table-striped" style = "width:100%">
    <thead>
        <tr>
            <th>
            Student Name
            </th>
            <th>
            Student Grade
            </th>
            <th>
            Student Telephone
            </th>
       </tr>
      
   
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.StudentName
                </td>    
                <td width="50%">
                    @obj.StudentGrade
                </td>
                <td width="50%">
                    @obj.StudentTelNo
                </td>
                <td>
                    <div class=" w-75 btn-group" role="group">
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.StudentId" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.StudentId" class="btn btn-primary mx-2"><i class="bi bi-person-x"></i> Delete</a>
                    </div>  
                </td>

                
            </tr>
        }
    </tbody>
</table>
   </div>
